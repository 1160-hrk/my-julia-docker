{
    "name": "Julia Development",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "julialang.language-julia"
            ],
    "settings": {
                "julia.environmentPath": "/workspace"
            }
        }
    },
    "remoteUser": "root",
    "postCreateCommand": "julia --project -e 'using Pkg; Pkg.instantiate(); Pkg.build(); Pkg.precompile()'"
}
